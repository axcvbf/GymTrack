@{
    ViewData["Title"] = "Calendar";
}

<div class="container">
    <div class="calendar">
        <div class="month d-flex justify-content-center">
            <i class="fa fa-angle-left prev"></i>
            <div class="date">March 2025</div>
            <i class="fa fa-angle-right next"></i>
        </div>
        <div class="weekdays d-flex justify-content-center">
            <div>Monday</div>
            <div>Tuesday</div>
            <div>Wednesday</div>
            <div>Thursday</div>
            <div>Friday</div>
            <div>Saturday</div>
            <div>Sunday</div>
        </div>
    </div>
</div>
